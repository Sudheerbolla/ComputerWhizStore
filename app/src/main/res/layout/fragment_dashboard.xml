<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/thirtyfive_dp"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Welcome User"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSalesReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Sales Reports"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCustomerReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Customers"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPackagingSlips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Packaging Slips"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInvoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Invoices"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Inventory Management"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>
