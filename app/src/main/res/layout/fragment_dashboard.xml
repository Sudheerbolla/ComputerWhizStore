<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/thirtyfive_dp"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="Welcome User"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSalesOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/sales_overview"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSalesReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/sales_reports"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCustomerReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/customers"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPackagingSlips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/packaging_slip"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInvoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/invoice"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven_dp"
            android:background="@drawable/round_bg_selector"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/inventory_management"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>
